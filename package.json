    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redux": "^5.0.0",
    "redux-toolkit": "^1.1.2",
    "vite": "^5.0.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
